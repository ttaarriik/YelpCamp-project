<%- include("./partials/header") %>


<div class= "container">
	
<div class = "row">
	<h1 style = "text-align: center;">
		Edit a comment
	</h1>
	
	<div style = "width: 30%; margin: 0 auto;">
		<form action = "/campgrounds/<%=campgroundId%>/<%=comment._id%>?_method=PUT" method = "POST">
			
			<div class = "form-group">
				<input class ="form-control" type  = "text" placeholder = "text" value = "<%=comment.text%>" name = "comments[text]">
			</div>
			
			<div class = "form-group">
				<input type = "submit" class="btn btn-primary btn-lg btn-block">
			</div>
			
			
		</form>
		
		<a href = "/campgrounds">Click here to view campgrounds page</a>
	</div>
</div>
	

</div>



