<%- include("../partials/header") %>


<div class= "container">
	
<div class = "row">
	<h1 style = "text-align: center;">
		Edit <%=campground.name%>
	</h1>
	
	<div style = "width: 30%; margin: 0 auto;">
		<form action = "/campgrounds/<%=campground._id%>?_method=PUT" method = "POST">
			
			<div class = "form-group">
				<input class ="form-control" type  = "text" value = "<%=campground.name%>" name = "name">
			</div>
			
			<div class = "form-group">
				<input class ="form-control" type = "text" value = "<%=campground.image%>" name = "image">
			</div>
			
			<div class = "form-group">
				<input class ="form-control" type  = "number" value = "<%=campground.price%>" name = "price" min = "0.01" step = "0.01">
			</div>
			
			<div class = "form-group">
				<input class ="form-control" type  = "text" placeholder = "location" name = "location" value = "<%=campground.location%>">
			</div>
			
			<div class = "form-group">
				<input class ="form-control" type = "text" value = "<%=campground.description%>" name = "description">
			</div>
			
			<div class = "form-group">
				<button class = "bt btn-lg btn-primary btn-block">Update</button>
			</div>
			
			
		</form>
		
		<a href = "/campgrounds">Click here to view campgrounds page</a>
	</div>
</div>
	

</div>



<%- include("../partials/footer") %>